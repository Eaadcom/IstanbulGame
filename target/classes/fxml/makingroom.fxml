    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

    <VBox alignment="BOTTOM_CENTER" prefHeight="100" spacing="10" />

    <HBox alignment="CENTER" spacing="10">
        <VBox id="makingRoom" alignment="CENTER" prefHeight="400" prefWidth="550" spacing="80">
         <Pane maxHeight="300.0" maxWidth="500.0" prefHeight="300.0" prefWidth="514.0">
            <children>
                  <TextField id="roomName" alignment="TOP_CENTER" layoutX="111.0" layoutY="88.0" prefHeight="0.0" prefWidth="279.0" />
                  <Button fx:id="startGame" alignment="TOP_CENTER" layoutX="209.0" layoutY="235.0" onAction="#startGame" text="Create room" />
               <ChoiceBox layoutX="322.0" layoutY="138.0" maxHeight="30.0" prefHeight="25.0" prefWidth="39.0" />
            </children>
         </Pane>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="1">
        <Button id="backButton" onAction="#goBack" prefHeight="140" prefWidth="450" />
    </HBox>

</VBox>
