<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" prefHeight="1080" prefWidth="1920" spacing="15" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MenuView">


    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>



    <HBox alignment="CENTER" prefHeight="350" spacing="1000" />

    <HBox alignment="CENTER" spacing="10">
        <VBox id="enterUsername" alignment="CENTER" prefHeight="510" prefWidth="450" spacing="80">
            <HBox alignment="CENTER" prefHeight="170" spacing="1000" />
            <TextField id="roomName" fx:id="usernamefield" alignment="TOP_CENTER" maxWidth="250.0" onAction="#login" prefWidth="250.0" />
            <Button id="login" alignment="TOP_CENTER" onAction="#login" prefHeight="70" prefWidth="183" />
            <HBox alignment="CENTER" prefHeight="60" spacing="0" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button id="exitGame" alignment="CENTER" onAction="#close" prefHeight="140" prefWidth="333" />
    </HBox>

    <VBox alignment="CENTER" prefHeight="120" spacing="10" />
</VBox>
