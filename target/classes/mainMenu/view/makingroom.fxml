<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" alignment="CENTER" prefWidth="1920" prefHeight="1080" fx:id="rootPane" fx:controller="mainMenu.controller.MainMenuController" xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

    <fx:define>
        <Font fx:id="FONT" size="22" />
    </fx:define>

    <VBox spacing="10" alignment="BOTTOM_CENTER" prefHeight="100"></VBox>

    <HBox spacing="10" alignment="CENTER">
        <VBox spacing ="80" alignment="CENTER" prefWidth="550" prefHeight="400" id="makingRoom" >
            <TextField alignment="TOP_CENTER" id="roomName"/>
            <Button alignment="TOP_CENTER" text="Create room" onAction="#startGame" fx:id="startGame"></Button>
        </VBox>
    </HBox>

    <HBox spacing="1" alignment="CENTER">
        <Button prefWidth="450" prefHeight="140" font="$FONT" id="backButton" onAction="#goBack"/>
    </HBox>

</VBox>